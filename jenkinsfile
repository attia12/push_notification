pipeline {
    agent any

    environment {
        CHROME_BIN = '/usr/bin/google-chrome-stable'
    }

    stages {
        stage('Install Tools') {
            steps {
                script {
                    // Ensure wget and curl are installed
                    sh 'sudo apt-get update'
                    sh 'sudo apt-get install -y wget curl apt-transport-https'
                }
            }
        }
        stage('Install Chrome') {
            steps {
                script {
                    // Using curl as an alternative to wget
                    sh 'curl -sSL https://dl.google.com/linux/linux_signing_key.pub | sudo apt-key add -'
                    sh 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" | sudo tee /etc/apt/sources.list.d/google-chrome.list'
                    sh 'sudo apt-get update'
                    sh 'sudo apt-get install -y google-chrome-stable'
                }
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Unit Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build application') {
            steps {
                sh 'npm run build-dev'
            }
        }
    }
}
