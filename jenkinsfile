pipeline {
    agent any

    environment {
        CHROME_BIN = '/usr/bin/google-chrome'
    }

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install --legacy-peer-deps'
                }
            }
        }
        stage('Unit Test') {
            steps {
                script {
                    sh 'export CHROME_BIN=/usr/bin/google-chrome && npm test'
                }
            }
        }
        stage('Build application') {
            steps {
                script {
                    sh 'npm run build-dev'
                }
            }
        }
    }
}
