pipeline {
    agent {
        docker {
            image 'cypress/base:10'
            args '-u root' // optional: to run as root user
        }
    }

    environment {
        CHROME_BIN = '/usr/bin/google-chrome-stable'
    }

    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Unit Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build application') {
            steps {
                sh 'npm run build-dev'
            }
        }
    }
}
